{
  "cli": {
    "appVersionSource": "local",
    "requireCommit": true
  },
  "build": {
    "production": {
      "env": {
        "APP_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "image": "latest"
      },
      "ios": {
        "simulator": false,
        "image": "latest",
        "autoIncrement": "version"
      }
    },
    "preview": {
      "distribution": "internal"
    }
  }
}